{
    "name": "yoeunes/regex-parser",
    "description": "A PCRE regex parser with lexer, AST, and validation",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Younes ENNAJI",
            "email": "younes.ennaji.pro@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.4",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.4.5",
        "phpstan/phpstan": "^2.1.32",
        "phpstan/phpstan-phpunit": "^2.0.8",
        "symfony/console": "^8.0",
        "symfony/http-kernel": "^8.0",
        "symfony/dependency-injection": "^8.0",
        "symfony/config": "^8.0",
        "symfony/http-foundation": "^8.0",
        "symfony/routing": "^8.0",
        "symfony/validator": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "RegexParser\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RegexParser\\Tests\\": "tests/"
        }
    },
    "extra": {
        "phpstan": {
            "includes": [
                "extension.neon"
            ]
        },
        "rector": {
            "sets": [
                "config/rector/regex-parser.php"
            ]
        }
    },
    "suggest": {
        "phpstan/phpstan": "To run static analysis and detect invalid regex patterns.",
        "phpstan/extension-installer": "To automatically enable the PHPStan rule for regex validation.",
        "rector/rector": "To automatically refactor and optimize regex patterns."
    }
}
