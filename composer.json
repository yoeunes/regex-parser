{
    "name": "yoeunes/regex-parser",
    "description": "A PCRE regex parser with lexer, AST, and validation",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Younes ENNAJI",
            "email": "younes.ennaji.pro@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.4",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.4",
        "symfony/http-kernel": "^7.3|^8.0",
        "symfony/dependency-injection": "^7.3|^8.0",
        "symfony/config": "^7.3|^8.0",
        "symfony/http-foundation": "^7.3|^8.0",
        "symfony/routing": "^7.3|^8.0",
        "symfony/validator": "^7.3|^8.0"
    },
    "autoload": {
        "psr-4": {
            "RegexParser\\": "src/",
            "RegexParser\\PHPStan\\": "phpstan/",
            "RegexParser\\Rector\\": "rector/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RegexParser\\Tests\\": "tests/"
        }
    },
    "extra": {
        "phpstan": {
            "includes": [
                "extension.neon"
            ]
        },
        "rector": {
            "sets": [
                "config/rector/regex-parser.php"
            ]
        }
    },
    "suggest": {
        "phpstan/phpstan": "To run static analysis and detect invalid regex patterns.",
        "phpstan/extension-installer": "To automatically enable the PHPStan rule for regex validation.",
        "rector/rector": "To automatically refactor and optimize regex patterns."
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "./tools/phpstan/vendor/bin/phpstan analyse",
        "phpcs": "./tools/php-cs-fixer/vendor/bin/php-cs-fixer fix",
        "bench": "./tools/phpbench/vendor/bin/phpbench run --report=default"
    }
}
