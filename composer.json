{
    "name": "yoeunes/regex-parser",
    "description": "A powerful PCRE regex parser with lexer, AST builder, validation, ReDoS analysis, and syntax highlighting. Zero dependencies, blazing fast, and production-ready.",
    "keywords": [
        "regex",
        "parser",
        "pcre",
        "lexer",
        "ast",
        "validation",
        "redos",
        "security",
        "syntax-highlighting",
        "php",
        "cli"
    ],
    "homepage": "https://github.com/yoeunes/regex-parser",
    "type": "library",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/yoeunes/regex-parser/issues",
        "source": "https://github.com/yoeunes/regex-parser",
        "docs": "https://github.com/yoeunes/regex-parser#readme"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/yoeunes"
        }
    ],
    "authors": [
        {
            "name": "Younes ENNAJI",
            "email": "younes.ennaji.pro@gmail.com",
            "homepage": "https://www.linkedin.com/in/younes--ennaji/",
            "role": "Developer"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpunit/phpunit": "^11.5|^12.5",
        "psr/cache": "^3.0",
        "psr/log": "^3.0",
        "psr/simple-cache": "^3.0",
        "rector/rector": "^2.2",
        "symfony/config": "^7.4|^8.0",
        "symfony/console": "^7.4|^8.0",
        "symfony/dependency-injection": "^7.4|^8.0",
        "symfony/http-foundation": "^7.4|^8.0",
        "symfony/http-kernel": "^7.4|^8.0",
        "symfony/routing": "^7.4|^8.0",
        "symfony/validator": "^7.4|^8.0"
    },
    "autoload": {
        "psr-4": {
            "RegexParser\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RegexParser\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/regex"
    ],
    "archive": {
        "exclude": [
            ".github",
            ".idea",
            ".vscode",
            ".cache",
            "art",
            "bin",
            "config",
            "docs",
            "examples",
            "public",
            "rector",
            "templates",
            "tests",
            "tools",
            ".editorconfig",
            ".gitattributes",
            ".gitignore",
            ".gitmessage",
            ".php-cs-fixer.dist.php",
            ".php-cs-fixer.cache",
            ".phplint.yml",
            ".php-version",
            "phpbench.yml",
            "phpbench.json",
            "phpstan.neon",
            "phpstan.dist.neon",
            "rector.php",
            "phpunit.xml",
            "phpunit.xml.dist",
            "extension.neon",
            "taskfile.dist.yaml",
            "CODE_OF_CONDUCT.md",
            "CONTRIBUTING.md",
            "SECURITY.md",
            "TODO.md"
        ]
    },
    "scripts": {
        "setup": [
            "@composer install",
            "@install-tools",
            "@test"
        ],
        "install-tools": [
            "@install-phpstan",
            "@install-rector",
            "@install-php-cs-fixer",
            "@install-phplint",
            "@install-phpbench"
        ],
        "install-phpstan": "cd tools/phpstan && composer install --no-interaction",
        "install-rector": "cd tools/rector && composer install --no-interaction",
        "install-php-cs-fixer": "cd tools/php-cs-fixer && composer install --no-interaction",
        "install-phplint": "cd tools/phplint && composer install --no-interaction",
        "install-phpbench": "cd tools/phpbench && composer install --no-interaction",
        "qa": [
            "@qa:test",
            "@qa:phpstan",
            "@qa:rector",
            "@qa:php-cs-fixer",
            "@qa:phplint"
        ],
        "qa:test": "vendor/bin/phpunit",
        "qa:phpstan": "tools/phpstan/vendor/bin/phpstan analyse --configuration=phpstan.dist.neon",
        "qa:rector": "cd tools/rector && php vendor/bin/rector process --dry-run",
        "qa:php-cs-fixer": "cd tools/php-cs-fixer && php vendor/bin/php-cs-fixer fix --dry-run --diff",
        "qa:phplint": "cd tools/phplint && php vendor/bin/phplint",
        "fix": [
            "@fix:php-cs-fixer",
            "@fix:rector"
        ],
        "fix:php-cs-fixer": "cd tools/php-cs-fixer && php vendor/bin/php-cs-fixer fix",
        "fix:rector": "cd tools/rector && php vendor/bin/rector process",
        "test": "@qa:test",
        "bench": "cd tools/phpbench && php vendor/bin/phpbench run"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "phpstan": {
            "includes": [
                "extension.neon"
            ]
        },
        "rector": {
            "sets": [
                "config/rector/regex-parser.php"
            ]
        }
    },
    "suggest": {
        "psr/cache": "To share AST cache via PSR-6 pools.",
        "psr/simple-cache": "To share AST cache via PSR-16 caches.",
        "phpstan/phpstan": "To run static analysis and detect invalid regex patterns.",
        "phpstan/extension-installer": "To automatically enable the PHPStan rule for regex validation.",
        "rector/rector": "To automatically refactor and optimize regex patterns."
    }
}
