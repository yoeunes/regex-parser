{
    "name": "yoeunes/regex-parser",
    "description": "A PCRE regex parser with lexer, AST, and validation",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Younes ENNAJI",
            "email": "younes.ennaji.pro@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.4",
        "phpbench/phpbench": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "RegexParser\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RegexParser\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse",
        "phpcs": "phpcs fix",
        "bench": "phpbench run --report=default"
    }
}
