{
    "name": "regex-parser-playground",
    "private": true,
    "description": "Build tooling for RegexParser Studio (WASM) playground.",
    "license": "MIT",
    "scripts": {
        "playground:bundle": "php bin/dump-wasm.php",
        "playground:css": "tailwindcss -c tailwind.config.cjs -i playground/src/styles.css -o public/assets/app.css --minify",
        "playground:build": "npm run playground:bundle && npm run playground:css",
        "playground:dev": "tailwindcss -c tailwind.config.cjs -i playground/src/styles.css -o public/assets/app.css --watch"
    },
    "devDependencies": {
        "tailwindcss": "^3.4.17"
    },
    "engines": {
        "node": ">=18"
    }
}

