includes:
    - extension.neon
    - tools/phpstan/vendor/phpstan/phpstan/conf/bleedingEdge.neon

parameters:
    level: max

    paths:
        - bin
        - phpstan
        - rector
        - src
        - tests

    scanDirectories:
        - tools/rector/vendor
        - tools/phpstan/vendor

    editorUrl: 'phpstorm://open?file=%%file%%&line=%%line%%'

    tmpDir: .cache/phpstan
