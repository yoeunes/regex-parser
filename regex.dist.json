{
    "$schema": "./regex.schema.json",
    "paths": [
        "src"
    ],
    "exclude": [
        "vendor",
        "tests",
        "Tests",
        "Fixtures"
    ],
    "checks": {
        "validation": true,
        "redos": {
            "enabled": true,
            "mode": "confirmed",
            "threshold": "critical",
            "noJit": false
        },
        "optimizations": {
            "enabled": true,
            "options": {
                "digits": false,
                "word": false,
                "ranges": false,
                "canonicalizeCharClasses": false,
                "possessive": false,
                "factorize": false,
                "minQuantifierCount": 4,
                "verifyWithAutomata": true
            }
        }
    }
}
