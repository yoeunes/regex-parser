<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="tools/phpunit/vendor/phpunit/phpunit/phpunit.xsd"
         backupGlobals="false"
         colors="true"
         bootstrap="tests/bootstrap.php"
         cacheDirectory=".cache/phpunit/"
         executionOrder="random"
         resolveDependencies="true">
    <php>
        <ini name="intl.default_locale" value="en"/>
        <ini name="intl.error_level" value="0"/>
        <ini name="memory_limit" value="-1"/>
        <ini name="error_reporting" value="-1"/>
        <ini name="display_errors" value="stderr"/>
        <ini name="log_errors" value="true"/>
        <ini name="serialize_precision" value="-1"/>
    </php>
    <testsuites>
        <testsuite name="RegexParser Test Suite">
            <directory>tests</directory>
        </testsuite>
    </testsuites>

    <source>
        <include>
            <directory>src</directory>
        </include>
        <exclude>
            <directory>src/Exception</directory>
            <directory>src/Bundle</directory>
        </exclude>
    </source>
</phpunit>
